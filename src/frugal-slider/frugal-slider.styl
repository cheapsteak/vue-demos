@import './slide'

.frugal-slider
  $lightgrey = #202124
  position: relative
  width: 100%
  height: 100%
  background: linear-gradient( to bottom, $lightgrey, darken($lightgrey, 50%));
  .slider-nav
    $buttonColor = #2F2E2E
    $fontColor = #D0D0D0
    position: absolute
    width: 60px
    height: 140px
    background-color: $buttonColor
    display: flex
    align-items: center
    justify-content: center
    top: 0
    bottom: 0
    margin: auto
    cursor: pointer
    transition: 0.2s all ease-in
    font-size: 30px
    font-weight: 600
    color: $fontColor
    box-shadow: 0 0 12px 3px #111
    text-shadow: 0 1px 3px #000
    &:hover
      background-color: lighten($buttonColor, 5%)
      color: lighten($fontColor, 20%)
      transform: scale(1.01)
    &:active
      transform: scale(1.02)
    &.next
      right: 0
    &.previous
      left: 0